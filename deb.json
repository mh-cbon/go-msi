{
  "name": "go-msi",
  "maintainer": "mh-cbon <mh-cbon@users.noreply.github.com>",
  "description": "Generate msi packages",
  "changelog-cmd": "changelog debian --vars='{\"name\":\"!name!\"}'",
  "homepage": "http://github.com/mh-cbon/!name!",
  "files": [
    {
      "from": "build/!arch!/!name!",
      "to": "/usr/bin",
      "base" : "build/!arch!/",
      "fperm": "0755"
    },
    {
      "from": "templates",
      "to": "/usr/share/!name!/"
    }
  ],
  "copyrights": [
    {
      "files": "*",
      "copyright": "2016 mh-cbon <mh-cbon@users.noreply.github.com>",
      "license": "MIT",
      "file": "LICENSE"
    }
  ]
}
